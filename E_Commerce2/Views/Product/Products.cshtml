@model IEnumerable<Product>

<h1>E-Commerce Products Page</h1>
<div class="container">
    @for (int i = 0; i < Model.Count(); i += 4)
    {
        var batch = Model.Skip(i).Take(4);
        <div class="row pt-2">

            @foreach (var product in batch)
            {
                <div class="col-md-3">
                    <div class="card">
                        <img src="~/Images/@product.ProductImage" height="225" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text">@product.ProductDescription</p>
                            <p class="card-text">$@product.ProductPrice</p>
                            <a onclick="AddToCart(@product.ProductId)" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>